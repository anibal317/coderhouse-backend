{{>navbar}}
<!-- Acordion-->
<div class="formProduct container border border-radius border-3 mb-3">
  <div class="container-fluid accordion mb-3 mt-3" id="accordionExample">
    <div class="w-50 accordion-item mx-auto">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button bg-secondary text-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
          aria-expanded="true" aria-controls="collapseOne">
          Agregar un nuevo producto
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
        data-bs-parent="#accordionExample">
        <div class="accordion-body">
          {{!-- <form action="/api/products" method="POST" enctype="multipart/form-data" id="addProducts" name="addProducts"> --}}
          <form action="/api/products" method="POST" enctype="multipart/form-data" id="addProducts" name="addProducts">
            <div class="mb-3">
              <label class="form-label" for="inputName">
                Title
              </label>
              <input class="form-control" type="text" name="title" id="inputName" placeholder="" />
            </div>
            <div class="row">
              <div class="col mb-3">
                <label class="form-label" for="inputPrice">
                  Price
                </label>
                <input class="form-control" type="number" name="price" id="inputPrice" placeholder="" step="any"/>
              </div>
              <div class="col mb-3">
                <label class="form-label" for="inputPrice">
                  Stock
                </label>
                <input class="form-control" type="number" name="stock" id="inputStock" placeholder="" step="any"/>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="inputThumbnail">
                Thumbnail
              </label>
              <input class="form-control" type="file" name="thumbnail" id="inputThumbnail" />
            </div>
            <div class="mb-3 text-center">
              <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Guardar" />
              <input class="btn btn-danger" type="reset" name="cancel" id="cancel" value="Cancelar" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>
<div class="table-container container border border-radius border-3">
  {{#if listExists}}
  <table class="table table-striped table-dark table-hover align-middle table-condensed">
    <thead>
      <tr>
        <th>
          #Id
        </th>
        <th>
          Name
        </th>
        <th>
          Pricing
        </th>
        <th>
          Photo
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each suggestedChamps}}
      <tr>
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.title}}
        </td>
        <td>
          ${{this.price}}
        </td>
        <td>
          <img src=
            {{#if this.thumbnail}} {{this.thumbnail}} {{else}} https://customercare.igloosoftware.com/.api2/api/v1/communities/10068556/previews/thumbnails/4fc20722-5368-e911-80d5-b82a72db46f2?width=680&height=680&crop=False {{/if}}
          />
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p>
    No Hay productos
  </p>
  {{/if}}
</div>
{{>footer}}

